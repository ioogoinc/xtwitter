<% content_for :notices do %>
  <p style="color: green"><%= notice %></p>
<% end %>


<% content_for :body do %>
  <h1>Users</h1>
  <table id="users">

    <tr>
        <th>
          <strong>Name:</strong>
        </th>

        <th>
          <strong>Lastname:</strong>
        </th>

        <th>
          <strong>Username:</strong>
        </th>

        <th>
          <strong>Email:</strong>
        </th>

        <th>
          <strong>Password:</strong>
        </th>
    </tr>

    <% @users.each do |user| %>
      <tr>
          <td>
            <%= user.name %>
          </td>

          <td>
            <%= user.lastname %>
          </td>

          <td>
            <%= user.username %>
          </td>

          <td>
            <%= user.email %>
          </td>

          <td>
            <%= user.password %>
          </td>
      </tr>
    <% end %>

  </table>
<% end %>

<% content_for :footer do %>
  <%= link_to "New user", new_user_path %>
<% end %>
